<h1><%= t('admin.products.index') %></h1>
<%= link_to t('admin.products.new'), new_admin_product_path, class: 'btn btn-primary' %>
<table class="table table-bordered mt-4">
  <thead>
    <tr>
      <th><%= t('admin.products.product_name') %></th>
      <th><%= t('admin.products.price') %></th>
      <th><%= t('admin.products.description') %></th>
      <th><%= t('admin.products.action') %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %>å††</td>
        <td><%= product.description %></td>
        <td>
          <%= link_to t('admin.products.edit_button'), edit_admin_product_path(product), class: 'btn btn-warning' %>
          <%= link_to t('admin.products.delete_button'), admin_product_path(product), method: :delete, data: { turbo: false, confirm: t('admin.products.confirm_delete') }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
