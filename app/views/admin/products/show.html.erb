<div class="container mt-4">
  <h1>商品詳細</h1>

  <div class="row">
    <div class="col-md-4">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: "img-fluid" %>
      <% end %>
    </div>

    <div class="col-md-8">
      <h2><%= @product.name %></h2>
      <p class="text-muted">商品説明: <%= @product.description %></p>
      <p class="h4">価格: <%= number_to_currency(@product.price, unit: "¥", precision: 0) %></p>

      <div class="mt-4">
        <%= link_to '編集', edit_admin_product_path(@product), class: 'btn btn-primary me-2' %>
        <%= link_to '戻る', admin_products_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
