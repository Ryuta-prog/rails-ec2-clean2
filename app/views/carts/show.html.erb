<div class="container">
  <main>
    <div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">カート</span>
          <span class="badge bg-primary rounded-pill"><%= @cart.cart_items.sum(:quantity) %></span>
        </h4>
        <ul class="list-group mb-3">
          <% @cart.cart_items.includes(:product).each do |item| %>
            <li class="list-group-item d-flex justify-content-between lh-sm">
              <div>
                <% if item.product.image.attached? %>
                  <%= image_tag item.product.image.variant(resize_to_limit: [50, 50]), class: "me-2" %>
                <% end %>
                <h6 class="my-0"><%= item.product.name %></h6>
                <small class="text-muted">数量: <%= item.quantity %></small>
              </div>
              <div class="d-flex align-items-center">
                <span><%= number_to_currency(item.product.price * item.quantity, unit: "¥", precision: 0) %></span>
                <%= button_to cart_cart_item_path(item),
                  method: :delete,
                  class: "btn btn-sm btn-outline-danger ms-2",
                  data: { turbo_confirm: '本当に削除しますか？' } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </li>
          <% end %>
          <li class="list-group-item d-flex justify-content-between">
            <span>合計</span>
            <strong><%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }, unit: "¥", precision: 0) %></strong>
          </li>
        </ul>
      </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">請求先住所</h4>
        <%= form_with(model: @order, local: true, class: "needs-validation") do |form| %>
          <div class="row g-3">
            <div class="col-sm-6">
              <label class="form-label">姓</label>
              <%= form.text_field:last_name,class:"form-control",required:true %>
            </div>
            <div class="col-sm-6">
              <label class="form-label">名</label>
              <%= form.text_field :first_name,class:"form-control",required:true %>
            </div>
            <div class="col-12">
              <label class="form-label">メールアドレス</label>
              <%= form.text_field :first_name,class:"form-control",required:true %>
            </div>
            <div class="col-12">
              <label class="form-label">メールアドレス</label>
              <%= form.email_field :email, class: "form-control", placeholder:"you@examle.com" %>
            </div>
            <div class="col-12">
              <label class="form-label">住所</label>
              <%= form.text_field :billing_address, class: "form-control", required: true %>
            </div>
            <div class="col-12">
              <label "form-label">建物名・部屋番号（任意）</label>
              <%= form.text_filed :address2, class: "form-control" %>
            </div>
            <div class="col-md-5">
              <label class="form-label">国</label>
            </div>
            <div clas="col-md-4">
              <label class="form-label">都道府県</label>
              <%= form.select :state,['東京都','大阪府','愛知県'],{ prompt:'選択してください'},{ class: "form-select",required:true }  %>
            </div>
            <div class="col-md-3">
              <label class="form-label">郵便番号</label>
              <%= form.text_field :zip, class:"form-control", required:true %>
            </div>
          </div>
          <hr class="my-4">
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="same-address">
            <label class="form-check-label" for="same-address">Shipping address is the same as my billing address</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="save-info">
            <label class="form-check-label" for="save-info">Save this information for next time</label>
          </div>
          <hr class="my-4">
          <h4 class="mb-3">クレジットカード情報</h4>
          <div class="mb-3">
            <div class="col-md-6">
              <label class="form-label">カード名義</label>
              <%= form.text_field :card_name,class:"form-control",required:true %>
            </div>
            <div class="col-md-6">
              <label class="form-label">カード名義</label>
              <%= form.text_field :card_name,class:"form-control",required:true %>
            </div>
            <div class="col-md-6">
              <label class="form-label">カード番号</label>
              <%= form.text_field :card_name,class:"form-control",required:true %>
            </div>
            <div class="col-md-3">
              <label class="form-label">有効期限</label>
              <%= form.text_field :card_name,class:"form-control",
              placeholder:"MM/YY," required:true %>
            <div class="col-md-3">
              <label class="form-label">セキュリティコード</label>
              <%= form.text_filed:card_cvv,class:"form-control",required:true %>
            </div>
          </div>
          <hr class="my-4">
          <%= form.submit"購入する",class:"w-100 btn-primary btn-lg"%>
        <% end %>
    </div>
  </main>
</div>
<script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="checkout.js"></script></body>
</html>
