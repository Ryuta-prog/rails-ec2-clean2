<h1>購入明細一覧</h1>
<table class="table">
    <thead>
        <tr>
            <th>注文番号</th>
            <th>購入日時</th>
            <th>合計金額</th>
            <th>配送先</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
     <tr>
      <td><%= order.id %></td>
      <td><%= l order.created_at %></td>
      <td><%= number_to_currency(order.total, unit: '¥') %>></td>
      <td><%= order.billing_address %></td>
      <td><%= link_to '詳細',order_path(order), class: 'btn btn-info' %></td>
     </tr>
     <% end %>
    </tbody>
</table>
