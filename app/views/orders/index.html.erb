<h1>購入明細一覧</h1>
<table class="table-striped">
    <thead>
        <tr>
            <th>注文番号</th>
            <th>合計金額</th>
            <th>請求先住所</th>
            <th>注文日時</th>
            <th>詳細</th>
        </tr>
    </thead>
    <tbody>
     <tr>
      <td><%= order.id %></td>
      <td><%= number_to_currency(order.total) %>></td>
      <td><%= order.billing_address %></td>
      <td><%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td><%= link_to '詳細',order_path(order), class: 'btn btn-primary' %></td>
     </tr>
     <% end %>
    </tbody>    
</table>
