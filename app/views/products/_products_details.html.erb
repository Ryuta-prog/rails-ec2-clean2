<section class="py-5">
  <div class="container px-4 px-lg-5 align-items-center">
    <!-- Product Image -->
    <div class="col-mb-6">
      <% if product.image.attached? %>
        <%= <%= image_tag url_for(product.image.variant(resize_to_limit: [450,300]).processed), class:"card-img-top mb-5 md-md-0", alt:product.name %>
      <% else %>
        <p>No image available</p>
      <% end %>
    </div>
    <!-- Product Information -->
    <h1 class="display-5 fw-bolder"><%= product.name %></h1>
    <div class="fs-5 mb-5">
      <% if product.original_price.present? && product.original_price > product.price %>
        <span class="text-decoration-line-through"><%= number_to_currency(product.original_price, unit: \"\u00a5\", precision: 0) %></span>
      <% end %>
      <span><%= number_to_currency(product.price, unit: \"\u00a5\, precision: 0)></span>
      </div>
      <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width": 3rem" />
      <button class="btn btn-outline-dark flex-shrink-0" type="button">
        <i class="bi-cart-fill me-1"></i>
        カートに追加
      </button>
    </div>
  </div>
</div>
</section>
