<!-- Header Section -->
<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder"><%= @product.name %></h1>
    </div>
  </div>
</header>
<!-- Product Details Section -->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <!-- Product Image -->
      <div class="col-md-6">
        <% if @product.image.attached? %>
          <%= image_tag url_for(@product.image.variant(resize_to_limit: [450, 300])), class: "card-img-top mb-5 mb-md-0", alt: @product.name %>
        <% end %>
      </div>
      <!-- Product Information -->
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= @product.name %></h1>
        <p><%= @product.description %></p>
        <div class="fs-5 mb-5">
          <span><%= format_price(@product.price) %></span>
        </div>
        <%= form_with(url: cart_cart_items_path, method: :post, local: true) do |f| %>
          <%= f.number_field :quantity, value: 1, min: 1, class: "form-control text-center me-3", style: "max-width: 5rem" %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.submit 'Add to cart', class: 'btn-outline-dark' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- Related Products Section -->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4">関連商品</h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @related_products.each do |related_product| %>
        <div class="col mb-5">
          <div class="card h-100">
            <%= link_to product_path(related_product) do %>
              <% if related_product.image.attached? %>
                <%= image_tag related_product.image.variant(resize_to_limit: [300, 200]), class: "card-img-top", alt: related_product.name %>
              <% end %>
            <% end %>
            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder"><%= related_product.name %></h5>
                <%= format_price(related_product.price) %>
              </div>
            </div>
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <%= button_to cart_cart_items_path, params: {product_id: related_product.id, quantity: 1},
                    method: :post,
                    class: "btn btn-outline-dark mt-auto" do %>
                  Add to cart
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
